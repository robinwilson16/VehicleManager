                        soundEffect = SoundFunctions.GetConfirmSound();
                        returnValue = true;

                        if (selectedRecordCopy?.MessageTemplateID > 0)
                        {
                            //Update existing record
                            if (CloseDialogAfterSave == true)
                            {
                                CloseMainRecord();
                            }
                        }
                        else 
                        {
                            //Insert new record

                            //Get ID of newly inserted record and add new item to model so shows on screen
                            MessageTemplateModel insertedMainRecord = await formResponse.Content.ReadFromJsonAsync<MessageTemplateModel>() ?? new MessageTemplateModel();

                            if (insertedMainRecord.MessageTemplateID > 0)
                            {
                                mainRecords?.Add(insertedMainRecord);


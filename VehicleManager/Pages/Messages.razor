                                            <InputNumber @bind-Value="selectedRecordCopy!.AmountOffered" class="form-control" />
                                            <ValidationMessage For="@(() => selectedRecordCopy!.AmountOffered)" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md">
